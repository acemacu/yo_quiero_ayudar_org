<div class="popup_window">
	<h2>Qué gusto verte de nuevo!</h2>
	<h3>Por favor ingresa tus datos o <%= link_to "crea una nueva cuenta", new_registration_path(resource_name) %></h3>

	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <div><%= f.label :email %><br />
	  <%= f.email_field :email %></div>

	  <div><%= f.label :password %><br />
	  <%= f.password_field :password %></div>

	  <% if devise_mapping.rememberable? -%>
	    <div><%= f.check_box :remember_me %> <%= f.label "RECORDAR MIS DATOS" %></div>
	  <% end -%>

	  <div><%= f.submit "Sign in" %></div>
	  <%= link_to "OLVIDASTE TU CONTRASEÑA O USUARIO?", new_password_path(resource_name) %><br />
	<% end %>
</div>